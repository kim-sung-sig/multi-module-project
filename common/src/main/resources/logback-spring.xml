<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

	<!-- 로그 패턴 정의 -->
	<property name="LOG_ENABLED" value="${management.tracing.enabled:-false}"/>

	<if condition='("${LOG_ENABLED}" == "true"'>
		<then>
			<property
					name="CONSOLE_LOG_PATTERN"
					value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){magenta} %clr([%-5level]) [%X{traceId:-NO_TRACE_ID},%X{spanId}] %clr(%logger{36}){cyan} - : %msg%n"/>
		</then>
		<else>
			<property
					name="CONSOLE_LOG_PATTERN"
					value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){magenta} %clr([%-5level]) %clr(%logger{36}){cyan} - : %msg%n"/>
		</else>
	</if>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<logger name="com.example" level="DEBUG"/>
	<!-- 언제 출력할 것인지를 지정한다. -->
	<root level="info">
		<appender-ref ref="CONSOLE"/>
	</root>

</configuration>